ll binpow(ll a,ll b){
	ll result = 1;
	while(b > 0){
		if(b%2 == 1){
			result = result * a;
			result = result % mod;
		}
		a = 1LL * a * a;
		a = a % mod;
		b/=2;
	}
	return result;
}
